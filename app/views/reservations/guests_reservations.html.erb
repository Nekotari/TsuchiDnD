<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listings", rooms_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", guests_reservations_path, class: "sidebar-link active"%></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Reservations
      </div>
      <div class="panel-body">
        <% @guests_reservations.each do |reservation| %>
          <div class="row">
            <div class="col-md-2">
              <%= reservation.check_in.strftime('%v') %>
            </div>
            <div class="col-md-2">
              <%= reservation.check_out.strftime('%v') %>
            </div>
            <div class="col-md-5">
              <%= link_to reservation.room.property_type, room_path(reservation.room) %><br/><br/>
            </div>
          </div>
          <hr/>
        <% end %>
      </div>
    </div>
  </div>
</div>
